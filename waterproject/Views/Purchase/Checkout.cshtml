@{
}
@model Purchase
<h2>Check out now</h2>
<p>Please enter your details, and we will send you your books as soon as possible!</p>

<form method="post" asp-controller="Purchase" asp-action="Checkout">
    
    <div asp-validation-summary="All" class="text-danger"></div>
    <h4>Ship to:</h4>

    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AddressLine1">Address Line 1:</label>
        <input asp-for="AddressLine1" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AddressLine2">Address Line 2:</label>
        <input asp-for="AddressLine2" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AddressLine3">Address Line 3:</label>
        <input asp-for="AddressLine3" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="City">City:</label>
        <input asp-for="City" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="State">State:</label>
        <input asp-for="State" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Zipcode">Zip:</label>
        <input asp-for="Zipcode" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Country">Country:</label>
        <input asp-for="Country" class="form-control" />
    </div>
    <br />

    <div class="float-end">
        <input class="btn btn-success" type="submit" value="Make Purchase" />
    </div>

</form>
